@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
<ul>
    <li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date Added: @Model.DateAdded.ToLongDateString()</li>
    <li>Stock: @Model.NumberInStock</li>
</ul>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m =>m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m =>m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre_Id)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipName"), "Select Membership Type", new { @class = "form-control" })
    </div>
}